@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model My_Project.Areas.MST_Branch.Models.MST_BranchModel

<div class="col-lg-12">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card py-5">
                <div class="card-body">
                    <div class="container w-75">
                        <form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="Save">
                            @Html.HiddenFor(x => x.BranchID)
                            <div class="mb-3">
                                <label class="form-label"><span class="text-danger fw-bold">*</span>Branch Name :</label>
                                <input type="text" class="form-control" id="BranchName" name="BranchName" asp-for="BranchName" />
                                <span class="form-text text-danger" asp-validation-for="BranchName"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><span class="text-danger fw-bold">*</span>Branch Code :</label>
                                <input type="text" class="form-control" id="BranchCode" name="BranchCode" asp-for="BranchCode" />
                                <span class="form-text text-danger" asp-validation-for="BranchCode"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a class="btn btn-outline-danger" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="Index">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}