@{
    ViewData["Title"] = "Home Page";
    ViewBag.PageTitle = "Dashboard";
    Layout = "_Layout";
}

<section class="section dashboard">
    <div class="row">

        <div class="col-lg-12">
            <div class="row">

                @for (int i = 0; i < 25; i++)
                {
                    <!-- Customers Card -->
                    <div class="col-xl-4 col-md-6">
                        <a class="card my-2 info-card students-card pt-4" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>Student Name</h6>
                                        <hr class="my-1"/>
                                        <span class="text-danger small pt-1 fw-bold">Branch Name</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- End Customers Card -->
                }

            </div>
        </div>

    </div>
</section>
