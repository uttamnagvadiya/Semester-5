@{
    ViewData["Title"] = "Home Page";
    ViewBag.PageTitle = "Dashboard";
    Layout = "_Layout";
}

<style>
    .table-data {
        overflow-y: auto;
        height: 70vh;
    }

        .table-data thead tr {
            position: sticky;
            top: 0;
        }
</style>

<section class="section dashboard">
    <div class="row">
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <form class="col-md-8 d-flex" role="search" asp-area="" asp-controller="" asp-action="">
                    <input class="form-control me-1" type="text" placeholder="Search by student name" aria-label="Search" name="">
                    <input class="form-control me-1" type="text" placeholder="Search by branch name" aria-label="Search" name="">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                <form method="post" class="col-md-2" asp-area="" asp-controller="Home" asp-action="StudentAddEdit">
                    <button type="submit" class="btn btn-outline-primary"><i class="bi bi-plus"></i>New Student</button>
                </form>
            </div>
        </nav>
        <div class="col-lg-12">
            <div class="row">
                <!-- Student List -->
                <div class="col-12">
                    <div class="card top-selling mt-1">

                        <div class="card-body fs-6 pt-2">
                            <div class="table-data">
                                <table class="table table-borderless table-hover">
                                    <thead>
                                        <tr class="table-primary">
                                            <th scope="col">Roll No.</th>
                                            <th scope="col">Student Name</th>
                                            <th scope="col">Branch</th>
                                            <th scope="col">City</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow data in Model.Rows)
                                        {
                                            <tr>
                                                <td>@data["StudentID"].ToString()</td>
                                                <td>
                                                    <div class="text-primary fw-bold">
                                                        @data["StudentName"].ToString()
                                                    </div>
                                                </td>
                                                <td>@data["BranchName"].ToString() (@data["BranchCode"].ToString())</td>
                                                <td>@data["CityName"].ToString()</td>
                                                <td><a asp-area="" asp-controller="Home" asp-action="StudentProfileDetails" asp-route-StudentID="@data["StudentID"]" class="btn btn-outline-dark">View</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div><!-- End Student List -->

            </div>
        </div>

    </div>
</section>
